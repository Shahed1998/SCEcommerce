<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>SCEcommerce - @ViewData["Title"]</title>

    <link rel="icon" type="image/x-icon" href="~/images/favicon.ico" />
    <link rel="icon" type="image/png" sizes="32x32" href="~/images/favicon-32x32.png" />
    <link rel="icon" type="image/png" sizes="16x16" href="~/images/favicon-16x16.png" />
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/WebApp.styles.css" asp-append-version="true" />
    <link href="~/lib/fontawesome-free-6.7.2-web/css/all.min.css" rel="stylesheet" />
    <link href="~/lib/toastr/toastr.min.css" rel="stylesheet" />
    <link href="~/lib/select2/css/select2.min.css" rel="stylesheet" />
    <link href="~/lib/select2/css/select2-bootstrap-5-theme.min.css" rel="stylesheet" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
</head>
<body>

    <partial name="_LoadingScreen" />
    <partial name="_GlobalModal" />

    <div class="main-container d-flex flex-column position-relative">

        <partial name="_TopNavbar" />

        @* Main Body *@
        <div class="main-body d-flex flex-grow-1 w-100 mh-100 h-100 overflow-hidden">

            <partial name="_Sidebar" />

            @* Main content start *@
            <div class="d-flex flex-column flex-grow-1 overflow-hidden" id="main-body-content">
                <nav class="navbar sticky-top navbar-expand border-bottom navbar-second bg-primary"
                     style="z-index: 1000; height:50px;" data-bs-theme="dark">
                    <button class="toggler-btn" type="button" onclick="sidebarToggle()">
                        <i class="fa-solid fa-align-left"></i>
                    </button>
                    <span class="ms-2 whichPage">@ViewData["Title"]</span>
                </nav>
                <main role="main" class="flex-grow-1 overflow-auto p-5" id="main">
                    <div class="container mt-2 mb-3">
                        @RenderBody()
                    </div>
                </main>
            </div>
            @* Main content end *@
            
        </div>
    </div>
    
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/lib/fontawesome-free-6.7.2-web/js/all.min.js"></script>
    <script src="~/js/bootbox.all.min.js"></script>
    <script src="~/lib/toastr/toastr.min.js"></script>
    <script src="~/lib/select2/js/select2.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <script src="~/js/custom-javascript.js" asp-append-version="true"></script>
    @(await Html.PartialAsync("_ToastrNotification", ViewBag.ToastrNotification as NotificationViewModel))
    @await RenderSectionAsync("Scripts", required: false)

</body>
</html>
