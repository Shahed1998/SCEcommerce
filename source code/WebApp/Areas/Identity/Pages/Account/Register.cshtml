@page
@model RegisterModel
@{
    ViewData["Title"] = "Register";
}

<div class="card shadow mx-auto">
    <div class="card-header">
        <div class="row">
            <div class="col-6 d-flex align-items-center">Create a new account.</div>
            <div class="col-6 d-flex justify-content-end">
                <a asp-area="Customer" asp-controller="Home" asp-action="Index" class="btn btn-danger">
                    <i class="fa-solid fa-xmark"></i>
                </a>
            </div>
        </div>
    </div>
    <div class="card-body">
        <div class="row">
            <div class="col-md-12">


                <form id="registerForm" class="row g-3" asp-route-returnUrl="@Model.ReturnUrl" method="post">
                    <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>

                    <div class="col-md-6">
                        <div class="form-floating mb-3">
                            <input asp-for="Input.FirstName" class="form-control" autocomplete="FirstName" aria-required="true" placeholder="" />
                            <label asp-for="Input.FirstName">FirstName</label>
                            <span asp-validation-for="Input.FirstName" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="form-floating mb-3">
                            <input asp-for="Input.LastName" class="form-control" autocomplete="LastName" aria-required="true" placeholder="" />
                            <label asp-for="Input.LastName">LastName</label>
                            <span asp-validation-for="Input.LastName" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="form-floating mb-3">
                            <input asp-for="Input.UserName" class="form-control" autocomplete="UserName" aria-required="true" placeholder="" />
                            <label asp-for="Input.UserName">UserName</label>
                            <span asp-validation-for="Input.UserName" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="form-floating mb-3">
                            <input asp-for="Input.Email" class="form-control" autocomplete="Email" aria-required="true" placeholder="example@gmail.com" />
                            <label asp-for="Input.Email">Email</label>
                            <span asp-validation-for="Input.Email" class="text-danger"></span>
                        </div>
                    </div>

                    <div class="col-md-6">
                        <div class="form-floating mb-3">
                            <input asp-for="Input.Password" class="form-control" autocomplete="new-password" aria-required="true" placeholder="password" />
                            <label asp-for="Input.Password">Password</label>
                            <span asp-validation-for="Input.Password" class="text-danger"></span>
                        </div>
                    </div> 
                    <div class="col-md-6">
                        <div class="form-floating mb-3">
                            <input asp-for="Input.ConfirmPassword" class="form-control" autocomplete="new-password" aria-required="true" placeholder="password" />
                            <label asp-for="Input.ConfirmPassword">Confirm Password</label>
                            <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
                        </div>
                    </div> 
                    
                    <div class="col-md-6">
                        <div class="form-floating mb-3">
                            <input asp-for="Input.Country" class="form-control" autocomplete="Country" aria-required="true" placeholder="" />
                            <label asp-for="Input.Country">Country</label>
                            <span asp-validation-for="Input.Country" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="form-floating mb-3">
                            <input asp-for="Input.State" class="form-control" autocomplete="State" aria-required="true" placeholder="" />
                            <label asp-for="Input.State">State</label>
                            <span asp-validation-for="Input.State" class="text-danger"></span>
                        </div>
                    </div>

                    <div class="col-md-6">
                        <div class="form-floating mb-3">
                            <input asp-for="Input.PostalCode" class="form-control" autocomplete="PostalCode" aria-required="true" placeholder="" />
                            <label asp-for="Input.PostalCode">PostalCode</label>
                            <span asp-validation-for="Input.PostalCode" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="form-floating mb-3">
                            <input asp-for="Input.PresentAddress" class="form-control" autocomplete="PresentAddress" aria-required="true" placeholder="" />
                            <label asp-for="Input.PresentAddress">PresentAddress</label>
                            <span asp-validation-for="Input.PresentAddress" class="text-danger"></span>
                        </div>
                    </div>
                    
                    <div class="col-md-6">
                        <div class="form-floating mb-3">
                            <input asp-for="Input.PermanentAddress" class="form-control" autocomplete="PermanentAddress" aria-required="true" placeholder="" />
                            <label asp-for="Input.PermanentAddress">PermanentAddress</label>
                            <span asp-validation-for="Input.PermanentAddress" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="form-floating mb-3">
                            <select asp-for="Input.Role" asp-items="@Model.Input.RoleList" class="form-select ">
                                <option selected disabled>--Select Role--</option>
                            </select>
                        </div>
                    </div>
                    
                    <div class="col-md-12">
                        <button id="registerSubmit" type="submit" class="w-100 btn btn-lg btn-primary">Register</button>
                    </div>
                    
                </form>
            </div>

            <div class="d-flex align-items-center my-4">
                <hr class="flex-grow-1" />
                <span class="px-3 text-muted">or</span>
                <hr class="flex-grow-1" />
            </div>


            <div class="col-md-12 col-md-offset-2">
                <section>
                    <h3>Use another service to register.</h3>
                    <hr />
                    @{
                        if ((Model.ExternalLogins?.Count ?? 0) == 0)
                        {
                            <div>
                                <p>
                                    There are no external authentication services configured. See this <a href="https://go.microsoft.com/fwlink/?LinkID=532715">
                                        article
                                        about setting up this ASP.NET application to support logging in via external services
                                    </a>.
                                </p>
                            </div>
                        }
                        else
                        {
                            <form id="external-account" asp-page="./ExternalLogin" asp-route-returnUrl="@Model.ReturnUrl" method="post" class="form-horizontal">
                                <div>
                                    <p>
                                        @foreach (var provider in Model.ExternalLogins!)
                                        {
                                            <button type="submit" class="btn btn-primary" name="provider" value="@provider.Name" title="Log in using your @provider.DisplayName account">@provider.DisplayName</button>
                                        }
                                    </p>
                                </div>
                            </form>
                        }
                    }
                </section>
            </div>
        </div>
    </div>
</div>



@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
